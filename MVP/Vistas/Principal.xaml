<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVP.Vistas.Principal">
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,40">
            <Label Text="Bienvenido!" TextColor="Black" FontSize="30" 
                   HorizontalOptions="Center"/>
            <Button Text="Ingresar un nuevo valor" x:Name="btn1" Clicked="btn1_Clicked"
                    HorizontalOptions="Fill" VerticalOptions="EndAndExpand" FontSize="Medium"
                    BackgroundColor="DodgerBlue" TextColor="White" CornerRadius="15"/>
            <Button Text="Ver valores históricos" x:Name="btn2" Clicked="btn2_Clicked"
                    HorizontalOptions="Fill" VerticalOptions="StartAndExpand" FontSize="Medium"
                    BackgroundColor="DodgerBlue" TextColor="White" CornerRadius="15"/>
            <Button Text="Salir" Clicked="btnSalir_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>